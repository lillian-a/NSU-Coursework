<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lillian.androidassignment4.FacultyDetailActivity">

    <ImageView
        android:id="@+id/detailFacultyImageView"
        android:layout_width="115dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/abramson"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/detailFacultyNameTextView"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:text="TextView"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/detailFacultyTitleTextView"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="5dp"
        android:paddingLeft="7dp"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailFacultyNameTextView" />

    <Button
        android:id="@+id/detailFacultyWebButton"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:onClick="goToFacultyWebsite"
        android:text="WEBSITE"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/detailFacultyTitleTextView" />

    <TextView
        android:id="@+id/detailFacultyBioTextView"
        android:layout_width="358dp"
        android:layout_height="288dp"
        android:text="TextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:paddingLeft="7dp"
        android:scrollbars = "vertical"
        android:textSize="14dp" />
</android.support.constraint.ConstraintLayout>
